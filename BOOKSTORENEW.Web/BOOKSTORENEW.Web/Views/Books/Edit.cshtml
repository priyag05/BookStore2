@model BOOKSTORENEW.Web.Models.Entities.Book

<h1>    Edit Book</h1>

@if(Model is null)
{
    <p>No Book was found with this Id</p>
}
else{


<form method="post">

    <div class="mt-3">
        <label class="form-label">BookId</label>
        <input type="text" class="form-control" asp-for="BookId" />

    </div>
    <div class="mt-3">
        <label class="form-label">BookTitle</label>
        <input type="text" class="form-control" asp-for="BookTitle" />

    </div>

    <div class="mt-3">
        <label class="form-label">Author Name</label>
        <input type="text" class="form-control" asp-for="AuthorName" />

    </div>
    <div class="mt-3">
        <label class="form-label">ISBN</label>
        <input type="text" class="form-control" asp-for="ISBN" />

    </div>
    <div class="mt-3">
        <label class="form-label">PublishedDate</label>
        <input type="text" class="form-control" asp-for="PublishedDate" />

    </div>
    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Price" />

    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary"> Save</button>
    

                  <button type="submit" class="btn btn-danger ms-3"
            asp-action="Delete"
            asp-controller="Books">Delete</button>
        </div>
</form>
}
